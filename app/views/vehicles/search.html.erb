<div class="container">
    <h1>Search Fleet By Customer/Model</h1><hr>
    <%= form_with url: "/search_results", method: :get, local: true do |form| %>
        <div class="form-group">
            <%= form.label :search_type %> <br>
            <%= form.select :search_type, ["customer_name", "vehicle_model"], class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.label :search_value %> <br>
            <%= form.text_field :search_value, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= form.submit "Search", class: 'btn btn-primary btn-lg' %>
        </div>
    <% end %>
</div>
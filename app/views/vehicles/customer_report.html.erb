<div class="container">
    <h3 align="center">Customer Report By Nationality</h3><hr>
    <div class="text-right">
        <%= link_to "Download Report as CSV", customer_report_path(format: :csv), class: 'btn btn-info btn-lg' %>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Country</th>
                <th>Customers Count</th>
            </tr>
        </thead>
        <tbody>
            <% @customers.each do |key, value| %>
                <tr>
                    <td><%= key %></td>
                    <td><%= value %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>